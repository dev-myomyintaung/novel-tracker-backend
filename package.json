{
  "name": "novel-tracker-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "prisma generate && tsc",
    "start:prod": "prisma migrate deploy && node dist/index.js",
    "start": "node dist/index.js",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "seed": "ts-node --transpile-only prisma/seed.ts",
    "baseline": "mkdir -p prisma/migrations/0_init && npx prisma migrate diff --from-empty --to-schema-datamodel prisma/schema.prisma --script > prisma/migrations/0_init/migration.sql && npx prisma migrate resolve --applied 0_init && node dist/server.js"
  },
  "postinstall": "prisma generate",
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  },
